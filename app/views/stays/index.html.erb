

<% if user_signed_in? %>

  <h1>welcome to your stays</h1>

  <% @stays.each do |stay| %>
    <p><%= stay.id %></p>
    <p><%= stay.start_booking_date %></p>
    <p><%= stay.end_booking_date %></p>
  <% end %>

  <h2>static stays</h2>
  <p>stay 1, hotel miramar</p>
  <p>stay 2, hotel moven pick</p>

<% else %>

  <%= link_to 'Log in facebook', user_facebook_omniauth_authorize_path %>

  <%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

<% end %>
