

<% if user_signed_in? %>

  <h1>welcome to your stays</h1>

  <% @stays.each do |stay| %>
    <%= link_to stay_hotel_path(stay, stay.hotel) do  %>
      <p>stay id: <%= stay.id %></p>
      <p>start booking: <%= stay.start_booking_date %></p>
      <p>end booking: <%= stay.end_booking_date %></p>
      <p>hotel: <%= stay.hotel.name %></p>

      <p>------------------------------------------------------</p>
    <% end %>
  <% end %>



<% else %>

  <%= link_to 'Log in facebook', user_facebook_omniauth_authorize_path %>

  <%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

<% end %>
