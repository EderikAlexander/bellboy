<!-- TOP NAVBAR -->
<%= content_for :nav_title, "Services" %>


<!-- HOTEL CREATE BUTTON (ONLY DISPLAYS ON ADMIN LOGIN) -->
  <% if @hotel.can_manage?(current_user) %>
    <%= link_to "Add service", new_stay_hotel_service_path(@stay, @hotel) %>
  <% end %>


<!-- DISPLAY ALL SERVICES AND CALL TO ACTIONS -->
<div class="services-container container text-center">

  <!-- LOOP THROUGH HOTEL SERVICES -->
  <div class="row">
  <% @services.each do |service| %>

    <!-- ANCOR TO PHOTO GLOBAL LINK TO SERVICE -->
    <div class="col-xl-12 col-sm-4 col-md-3 service-element">

      <!-- SERVICE PHOTO AND DESCRIPTION -->
      <%= link_to stay_hotel_service_path(@stay, @hotel, service) do %>

          <!-- SERVICE PHOTO -->
          <div class="service-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path service.photo.path %>')">
          </div>

          <!-- SERVICE TITLE -->
          <div class="service-title">
            <h3><%= service.title %></h3>
          </div>

          <!-- SERVICE DESCRIPTION -->
          <div class="service-description hidden-xs">
            <h3><%= service.title %></h3>
          </div>

      <% end %>

    </div>

  <% end %>
  </div>

</div>


<!-- BOTTOM NAV BAR -->
<%= render 'shared/bottom-navbar', home: stay_hotel_path(@stay, @hotel), services: stay_hotel_services_path(@stay, @hotel), locations: stay_hotel_locations_path(@stay, @hotel)  %>
