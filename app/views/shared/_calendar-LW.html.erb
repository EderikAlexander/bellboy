      <%= link_to start_date: @date_range.first - 1.day do %>
        <i class="fa fa-chevron-circle-left hover-size nav-cal-left" aria-hidden="true"></i>
      <% end %>
    </div>

    <div class="text-center cal-book-month">
      <%= @start_date.strftime("%B") %> <%= @start_date.year %>
