<h1>calendar for the hotel: </h1>

<%# start_date = params[:start_date] || Date.today %>
<% start_date = params.fetch(:start_date, Date.today).to_date %>

<%#= calculation for agenda calendar %>
<% date_range = (start_date..(start_date + 3.days)).to_a %>

<%#= calculation for month calendar %>
<%# date_range = (start_date.beginning_of_month.beginning_of_week..start_date.end_of_month.end_of_week).to_a %>

<%#= calculation for week calendar %>
<%# date_range = (start_date.beginning_of_week..start_date.end_of_week) %>

<%#= link_to raw("&laquo;"), param => date_range.first - 1.day  %>

<%#= we can not pass a url, we have to pass the current url %>
<%= link_to "Previous", start_date: date_range.first - 1.day  %>
<%#= this should be customizable %>
<%= start_date.month %> <%= start_date.year %>
<%= link_to "Next", start_date: date_range.last + 1.day  %>

<table class="table table-striped">
  <thead>
  <tr>
    <% date_range.slice(0,7).each do |day| %>
      <th><%= I18n.t("date.abbr_day_names")[day.wday] %></th>
    <% end %>
  </tr>

  </thead>
  <tbody>
    <% date_range.each_slice(7) do |week| %>
      <tr>
        <% week.each do |day| %>
          <td>
            <%= day %>
            <%# sort_by(&:start_time) == sort_by{ |m| m.start_time } %>
            <% @bookings.select { |booking| booking.start_datetime.to_date == day }.sort_by(&:start_datetime).each do |booking| %>
              <div><%= @service.title %> - <%= booking.start_datetime %></div>
              <div><%= link_to booking.id, stay_hotel_service_booking_path(@stay, @hotel, @service, booking) %></div>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



















