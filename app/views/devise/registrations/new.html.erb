<div class="sign_up_wrapper">
<div class="container">
<div id="sign_up_content" class="row">
  <div class="col-xs-10 col-xs-offset-1" style="margin-top: 20px;">
  <h2 class="text-center" style="color: #FFD259;">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :photo, as: :attachinary %>
    <%= f.input :first_name, required: false, autofocus: true, input_html: { class: "input-field", style: "height: 30px;"}%>
    <%= f.input :last_name, required: false, autofocus: true, input_html: { class: "input-field", style: "height: 30px;"} %>
    <%= f.input :email, autofocus: true, input_html: { class: "input-field", style: "height: 30px;"} %>
    <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "input-field", style: "height: 30px;"} %>
    <%#= f.input :password_confirmation, input_html: { class: "input-field", style: "height: 30px;"} %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "main-btns", style: "margin-bottom: 20px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>





  </div>
</div>
</div>
</div>
